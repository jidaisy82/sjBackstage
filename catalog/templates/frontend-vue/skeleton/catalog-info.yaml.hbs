---
apiVersion: backstage.io/v1alpha1
kind: Component
metadata:
  name: ${{ values.projectSlug }}-vue
  description: "${{ values.description }} - Vue Frontend - Vue ${{ values.vueVersion }} - ${{ values.buildTool }} Build Tool{% if values.uiFramework %} - ${{ values.uiFramework }} UI Framework{% endif %}{% if values.stateManagement %} - ${{ values.stateManagement }} State Management{% endif %}"
  tags:
    - vue
    - frontend
    - javascript
{% if values.buildTool == "vite" %}
    - vite
{% endif %}
{% if values.buildTool == "webpack" %}
    - webpack
{% endif %}
  annotations:
    github.com/project-slug: ${{ values.repoUrl | parseRepoUrl | pick('owner') }}/${{ values.repoUrl | parseRepoUrl | pick('repo') }}
    backstage.io/techdocs-ref: dir:.
spec:
  type: website
  lifecycle: production
  owner: "${{ values.owner }}"
  system: ${{ values.projectSlug }}-system
