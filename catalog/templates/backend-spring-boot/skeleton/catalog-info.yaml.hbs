---
apiVersion: backstage.io/v1alpha1
kind: Component
metadata:
  name: {{ values.projectName }}-spring-boot
  description: |
    {{ values.description }} - Spring Boot Backend
    - Spring Boot {{ values.springVersion }}
    - Java {{ values.javaVersion }}
    {{#if values.enableJPA}}
    - JPA + {{ values.databaseType }}
    {{/if}}
    {{#if values.enableSecurity}}
    - Spring Security
    {{/if}}
  tags:
    - spring-boot
    - java
    - backend
    {{#if values.enableJPA}}
    - jpa
    {{/if}}
    {{#if values.enableSecurity}}
    - security
    {{/if}}
  annotations:
    github.com/project-slug: {{ parameters.repoUrl | parseRepoUrl }}
    backstage.io/techdocs-ref: dir:.
spec:
  type: service
  lifecycle: production
  owner: {{ values.owner }}
  system: {{ values.projectName }}-system
  providesApis:
    - {{ values.projectName }}-rest-api
